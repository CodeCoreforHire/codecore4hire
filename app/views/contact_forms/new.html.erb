<div class = 'well bs-component'>
<legend>Contact <%= @user.full_name %></legend>

<%= form_tag contact_forms_path(email: @user.email) do %>
  <%= text_field_tag :from, nil, :required => true %>
  <%= text_area_tag :message, nil, :required => true %>
  <%= submit_tag :submit, class: "btn-primary" %>
<% end %>
</div>
