<div>
  <label>Projects</label>
  <% profile.projects.each do |project| %>
    <div>
      <%= project.title %>
      <%= project.link %>
      <%= project.github %>
      <%= project.description %>
      <% if can? :manage, profile %>
      <%= link_to "Edit", edit_user_profile_project_path(profile.user, profile, project) %>
      <%= link_to "Delete", user_profile_project_path(profile.user, profile, project), method: :delete, data:  {confirm: "Are you sure?" } %>
      <% end %>
      <hr>
    </div>
  <% end %>
</div>
