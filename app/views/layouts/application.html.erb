<!DOCTYPE html>
<html>
<head>
  <title>Codecode4Hire</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.0.0/jquery.min.js"></script>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render "layouts/navbar" %>
  <div class="container">
    <% if flash[:notice] %>
      <div id= "flash" class="alert alert-dismissible alert-success"><%= flash[:notice] %></div>
    <% elsif flash[:alert] %>
      <div id= "flash" class="alert alert-dismissible alert-danger"><%= flash[:alert] %></div>
    <% end %>
    <%= yield %>
    <%= render "sessions/form"%>
    <%= render "users/form" %>
  </div>
</body>
</html>
