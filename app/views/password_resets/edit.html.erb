<h1>Make a new password</h1>

<div class = 'well bs-component'>
  <h3>Reset Password</h3>
  <%= form_tag password_reset_path, method: :patch do %>
  <form class="form-horizontal">
    <%= hidden_field_tag :token, @token %>
    <fieldset>
        <div class="form-group">
          <%= label_tag :password,"Password:", class: "col-lg-2 control-label" %>
          <div class="col-lg-10">
            <%= password_field_tag :password, nil, {:class => "form-control", :style => "padding: 15px"} %>
          </div>
        </div>

        <div class="form-group">
          <%= label_tag :password_confirmation,"Password Confirmation:", class: "col-lg-2 control-label" %>
          <div class="col-lg-10">
            <%= password_field_tag :password_confirmation, nil, {:class => "form-control", :style => "padding: 15px"} %>
          </div>
        </div>

        <div class="col-lg-10 col-lg-offset-2">
          <%= submit_tag "Reset Password", class: "btn btn-primary" %>
        </div>
      </div>
    </fieldset>
  </form>
  <% end %>
</div>
