<h1>Advanced Search<h1>

<%= form_tag("/search/advanced", method: "post", enforce_utf8: false) do %>
<%= text_field_tag :name, nil, class: "form-control", placeholder: 'Enter user name here...' %>
<%= text_field_tag :skill, nil, class: "form-control", placeholder: 'Enter desired skill here...' %>
<%= text_field_tag :education, nil, class: "form-control", placeholder: 'Enter place of education here...' %>
<%= submit_tag "Search", name: nil, class: "btn btn-default" %>
<% end %>
